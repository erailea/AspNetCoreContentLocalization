

@model IEnumerable<AspNetCoreContentLocalization.ViewModels.Shared.Library>
@inject IViewLocalizer Localizer
<h1>@Localizer["Librarys"]</h1>
<table class="content__table table" cellpadding="0" cellspacing="0">
    <tr class="table__row">
        <th class="table__cell table__cell--heading">@Localizer["ID"]</th>
        <th class="table__cell table__cell--heading">@Localizer["Name"]</th>
        <th class="table__cell table__cell--heading">&nbsp</th>
    </tr>
    @foreach (var library in this.Model)
    {
        <tr class="table__row">
            <td class="table__cell">@library.Id</td>
            <td class="table__cell">@library.Name</td>
            <td class="table__cell"><a href="/librarys/edit/@library.Id">@Localizer["Edit"]</a></td>
        </tr>
    }
</table>
<div class="content__buttons buttons">
    <a class="buttons__button button" href="/librarys/add">@Localizer["Add library"]</a>
</div>