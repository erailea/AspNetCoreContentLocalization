

@model IEnumerable<AspNetCoreContentLocalization.ViewModels.Shared.Culture>
@inject IViewLocalizer Localizer
<div class="culsture-selector">
    <select class="culsture-selector__select" id="cultureSelector" onchange="selectedCultureChanged();">
        @foreach (var culture in this.Model)
        {
            <option value="@culture.Code" selected="@(culture.Code == System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName ? "selected" : null)">@culture.Name</option>
        }
    </select>
</div>
<div class="content__buttons buttons">
    <a class="buttons__button button" href="/librarys">@Localizer["Library"]</a>
    <a class="buttons__button button" href="/books">@Localizer["Book"]</a>
</div>